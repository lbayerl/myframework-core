{% extends '@MyFrameworkCore/base_auth.html.twig' %}

{% block title %}Login - {{ parent() }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h1 class="h4 mb-4">Login</h1>

            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">E-Mail</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Passwort</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-primary w-100" type="submit">Anmelden</button>
            </form>

            <hr class="my-3">

            <div class="text-center">
                <a href="{{ path('myframework_auth_register') }}" class="text-decoration-none">Konto erstellen</a>
                <span class="text-muted mx-2">Â·</span>
                <a href="{{ path('myframework_auth_reset_password_request') }}" class="text-decoration-none">Passwort vergessen?</a>
            </div>
        </div>
    </div>
{% endblock %}

