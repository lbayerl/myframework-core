{% extends '@MyFrameworkCore/base_auth.html.twig' %}

{% block title %}Passwort vergessen - {{ parent() }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h1 class="h4 mb-3">Passwort vergessen</h1>
            <p class="text-muted mb-4">Gib deine E-Mail ein. Wir senden dir einen Link zum Zurücksetzen.</p>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                <button class="btn btn-primary w-100" type="submit">Link senden</button>
            {{ form_end(requestForm) }}

            <hr class="my-3">

            <div class="text-center">
                <a href="{{ path('myframework_auth_login') }}" class="text-decoration-none">Zurück zum Login</a>
            </div>
        </div>
    </div>
{% endblock %}

