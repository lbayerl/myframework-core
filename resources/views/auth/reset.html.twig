{% extends '@MyFrameworkCore/base_auth.html.twig' %}

{% block title %}Passwort zurücksetzen - {{ parent() }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h1 class="h4 mb-4">Passwort zurücksetzen</h1>

            {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(resetForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                <button class="btn btn-primary w-100" type="submit">Passwort speichern</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}

