{% extends '@MyFrameworkCore/base.html.twig' %}

{% block body %}
<div class="d-flex flex-column min-vh-100">
    {# Top Navigation (Mobile-First) #}
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container-fluid">
            {# Brand #}
            <a class="navbar-brand" href="{{ path(branding.homeRoute) }}" style="color: var(--primary-color);">
                {% if branding.logoPath %}
                    <img src="{{ asset(branding.logoPath) }}" alt="{{ branding.appName }}" height="30">
                {% else %}
                    {{ branding.appName }}
                {% endif %}
            </a>
            
            {# Mobile Toggle #}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            {# Navigation Items #}
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    {% block navigation %}
                        <li class="nav-item">
                            <span class="nav-link">{{ app.user.email }}</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('myframework_auth_logout') }}">Abmelden</a>
                        </li>
                    {% endblock %}
                </ul>
            </div>
        </div>
    </nav>
    
    {# Main Content Area #}
    <main class="flex-grow-1">
        <div class="container-fluid py-4">
            {% block content %}{% endblock %}
        </div>
    </main>
    
    {# Footer #}
    <footer class="bg-light border-top py-3 mt-auto">
        <div class="container-fluid text-center text-muted">
            <small>&copy; {{ 'now'|date('Y') }} {{ branding.appName }}</small>
        </div>
    </footer>
</div>
{% endblock %}
